<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       		 http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">


    <!-- quartz 任务 -->

    <bean id="QuartzCloseTime"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <bean name="jobClass" class="com.caiyi.financial.nirvana.ccard.ccardinfo.quartz.QuartzCloseTime" />
        </property>
        <property name="targetMethod">
            <value>run</value>
        </property>
    </bean>

    <!-- 触发器 -->
    <bean id="QuartzCloseTimeTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="QuartzCloseTime" />
        <property name="startDelay" value="1000" />
        <property name="cronExpression" value="0 0/5 * * * ?" />
    </bean>

    <bean id="T1Job"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <bean name="jobClass" class="com.caiyi.financial.nirvana.ccard.ccardinfo.quartz.T1Job" />
        </property>
        <property name="targetMethod">
            <value>run</value>
        </property>
    </bean>

    <!-- 触发器 -->
    <bean id="T1JobTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="T1Job" />
        <property name="startDelay" value="1000" />
        <property name="cronExpression" value="0/5 * * * * ?" />
    </bean>

    <!-- 调度 -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean" lazy-init="true">
        <property name="triggers">
            <list>
                <ref bean="QuartzCloseTimeTrigger"/>
                <ref bean="T1JobTrigger"/>
            </list>
        </property>
        <property name="autoStartup" value="true" />
    </bean>
</beans>
